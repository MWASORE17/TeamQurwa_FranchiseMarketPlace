<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.williamsumitromytextview.qurwateam.view.activity.EditUser">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Pikachise Market" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:text=""
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/avatar"
                android:textColor="@color/white"
                android:theme="@style/Theme.App.Base" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputEditOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_oldpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Old Password"
                android:text=""
                android:inputType="textPassword"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/key"
                android:textColor="@color/white"
                android:theme="@style/Theme.App.Base" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputEditNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_newpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your New Password"
                android:text=""
                android:inputType="textPassword"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/icon"
                android:textColor="@color/white"
                android:theme="@style/Theme.App.Base" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputEditConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_confirmaPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Your New Password"
                android:inputType="textPassword"
                android:text=""
                android:drawablePadding="20dp"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/icon"
                android:theme="@style/Theme.App.Base" />
        </android.support.design.widget.TextInputLayout>
        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btn_savechange_profil"
            android:layout_marginTop="50dp"
            pb_colorComplete="@color/green_complete"
            pb_colorNormal="@color/blue_normal"
            pb_colorPressed="@color/blue_pressed"
            pb_colorProgress="@color/purple_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textColor="@android:color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
